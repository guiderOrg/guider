# any later version.

PYTHONEXEC=$(which python)

if [ ! $PYTHONEXEC ]
    then
        echo "[Error] Fail to find python"
        exit
fi

if [ $BYTECODE ]
    then
        if [ -f $BYTECODE ]
            then
                $PYTHONEXEC $BYTECODE $*
            else
                echo "[Error] Fail to launch guider.pyc"
        fi
elif [ -f guider.pyc ]
    then
        $PYTHONEXEC guider.pyc $*
else
    echo "[Error] Fail to find guider.pyc, try to build or set path"
fi
